extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")
    
block content
    main 
        if prods.length > 0
            .grid 
                each product in prods
                    article.card.product-item 
                        header.card__header 
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://thewritelife.com/wp-content/uploads/2019/08/How-to-format-a-book.jpg.webp", height=100, width = 160, alt="Book")
                        div.card__content
                            h2.product__price $49.99
                            p2.product__description A Very interesting book and so many even more
                        .card__actions
                            button.btn Add to Cart

        else 
            h1 No Products